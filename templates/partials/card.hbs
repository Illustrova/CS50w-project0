<article class="card h-100 pets--{{type}}">
	<img class="card-img-top" src="{{img.main}}" alt="Missing {{pet}}, {{breed}} from {{seen.location}}" />

	<div class="card-body pb-0">
		<h5 class="card-title text-uppercase">
			{{type}}
			{{pet}}
		</h5>
		<ul class="card-text list-unstyled">
			{{#if breed}}
				<li>
					<span class="font-weight-bold">
						Breed:
					</span>
					{{breed}}
				</li>
			{{/if}}
			{{#if age}}
				<li>
					<span class="font-weight-bold">
						Age:
					</span>
					{{age}}
				</li>
			{{/if}}
			{{#if color}}
				<li>
					<span class="font-weight-bold">
						Color:
					</span>
					{{color}}
				</li>
			{{/if}}
			{{#if nickname}}
				<li>
					<span class="font-weight-bold">
						Nickname:
					</span>
					{{nickname}}
				</li>
			{{/if}}
		</ul>
		<ul class="list-group list-group-flush">
			<li class="list-group-item py-2 px-0">
				<i class="fas fa-calendar"></i>
				{{seen.date}}
			</li>
			<li class="list-group-item py-2 px-0">
				<i class="fas fa-map-marker"></i>
				{{seen.location}}
			</li>
		</ul>
	</div>
	<div class="card-footer bg-transparent mt-auto border-top-0">
		{{#if reward.offered}}
			<p class="badge badge--reward text-center font-weight-bold">
				Reward â‚¬
				{{reward.amount}}
			</p>
		{{/if}}
		<div class="d-flex justify-content-between align-items-center">
			<a href="#" class="card-link link--accent">
				Details
			</a>
			<a href="#" class="btn btn-success--animated">
				{{btn-success-text}}
			</a>
		</div>
	</div>
</article>